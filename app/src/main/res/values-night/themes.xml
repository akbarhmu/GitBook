<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GitBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lines">1</item>
    </style>
    <style name="Text.Subtitle">
        <item name="android:textColor">@color/colorSubtitleLighter</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Description">
        <item name="android:textColor">@color/colorSubtitle</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Button">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>